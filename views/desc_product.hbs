{{>navbar}}
<div class="container x">
    <div class="card mt-2" style="background-color: whitesmoke">
        <!--if a tag is included her than item is displayed here in light color untill i specify the color balck here-->
        <div class="card-body">
            <a href="/product/search/{{data.specific.pid}}">

                <div class="row"style="color: black;">
                    <div class="col-5">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active ">
                                    <img class="d-block w-100" height="100" width="100" src='/assets/upload/{{data.specific.adsImages.0.name}}' alt="First slide">
                                </div>
                                {{#if data.specific.adsImages.1.name}}
                                    <div class="carousel-item ">
                                        <img class="d-block w-100" height="100" width="100" src='/assets/upload/{{data.specific.adsImages.1.name}}' alt="Second slide">
                                    </div>
                                {{/if}}
                                {{#if data.specific.adsImages.2.name}}
                                    <div class="carousel-item ">
                                        <img class="d-block w-100" height="100" width="100" src='/assets/upload/{{data.specific.adsImages.2.name}}' alt="Third slide">
                                    </div>

                                {{/if}}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>

                    <p class="card-title col-md-2"><strong>name: </strong>{{data.specific.pname}}</p>

                </div>
                <div class="row " style="color: black">
                    <p class="card-text col-md-5"><strong>about :</strong> {{data.specific.pabout}}</p>
                    <p class="card-text col-md-2"><strong>price: </strong>{{data.specific.pprice}}</p>
                    <p class="card-text col-md-2"><strong>State: </strong>{{data.specific.pstate}}</p>
                </div>
            </a>
            {{#if r.user}}
                {{#if data.specific.bookmarks}}
                    <button id="bookmark_btn{{data.specific.pid}}" onclick="removeBookmark({{data.specific.pid}})" class="btn btn-sm btn-danger col-md-2 float-right ">REMOVE BOOKMARK</button>
                {{else}}
                    <button id="bookmark_btn{{data.specific.pid}}" onclick="bookmark({{data.specific.pid}})" class="btn btn-sm btn-primary col-md-2 float-right ">BOOKMARK AD</button>
                {{/if}}
            {{/if}}
        </div>
    </div>
    <h3 style="padding:20px; color: whitesmoke"><strong>Other Ads from this user:</strong></h3>
</div>
{{>searchResults}}


<style>
    body{
        background: url("../assets/images/theme.jpg");
        background-size: cover;
    }
</style>


<script>
    function bookmark(id){
        $.ajax({
            url: `/profile/bookmarks/${id}`,
            type: 'POST',
            data:{
                id:id
            },
            success: function(result) {
                location.reload(true)
            }
        })

    }
    function removeBookmark(id){
        $.ajax({
            url:`/profile/bookmarks/${id}`,
            type:'DELETE',
            success:function(result){
                location.reload(true)
            }
        })
    }
</script>

